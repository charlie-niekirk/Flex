<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_title"
        style="@style/Bold.H2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:text="Search for anything" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/input_layout_search"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="@string/search_hint"
        app:hintTextColor="@color/accent"
        app:boxStrokeColor="@color/accent"
        app:layout_constraintTop_toBottomOf="@id/search_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_l"
        android:layout_marginHorizontal="@dimen/spacing_l">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input_search"
            android:hint="@string/search_hint" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/random_subreddit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_layout_search"
        app:layout_constraintStart_toStartOf="@id/input_layout_search"
        android:layout_marginTop="@dimen/spacing_l"
        android:textSize="12sp"
        android:text="Random subreddits"
        android:textStyle="bold" />

    <View
        android:id="@+id/random_sub_container"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/attribute_container"
        android:foreground="?attr/selectableItemBackground"
        android:outlineProvider="background"
        app:layout_constraintStart_toStartOf="@id/input_layout_search"
        app:layout_constraintEnd_toEndOf="@id/input_layout_search"
        app:layout_constraintTop_toBottomOf="@id/random_subreddit_title"
        android:layout_marginTop="@dimen/spacing_m"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/random_sub_label_icon"
        android:layout_width="@dimen/spacing_xl"
        android:layout_height="@dimen/spacing_xl"
        app:layout_constraintTop_toTopOf="@id/random_sub_container"
        app:layout_constraintBottom_toBottomOf="@id/random_sub_container"
        app:layout_constraintStart_toStartOf="@id/random_sub_container"
        android:layout_marginStart="@dimen/spacing_l"
        android:src="@drawable/ic_shuffle"
        android:backgroundTint="@color/accent" />

    <TextView
        android:id="@+id/random_sub_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/random_sub_container"
        app:layout_constraintBottom_toBottomOf="@id/random_sub_container"
        app:layout_constraintStart_toEndOf="@id/random_sub_label_icon"
        app:layout_constraintEnd_toEndOf="@id/random_sub_container"
        android:layout_marginStart="@dimen/spacing_l"
        android:layout_marginEnd="@dimen/spacing_l"
        android:text="@string/random_subreddit_text" />

    <ImageView
        android:id="@+id/random_sub_action_icon"
        android:layout_width="@dimen/spacing_l"
        android:layout_height="@dimen/spacing_l"
        app:layout_constraintTop_toTopOf="@id/random_sub_container"
        app:layout_constraintBottom_toBottomOf="@id/random_sub_container"
        app:layout_constraintEnd_toEndOf="@id/random_sub_container"
        android:layout_marginEnd="@dimen/spacing_l"
        android:src="@drawable/ic_arrow_forward"
        android:backgroundTint="@color/accent" />

    <View
        android:id="@+id/random_nsfw_container"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/attribute_container"
        android:foreground="?attr/selectableItemBackground"
        android:outlineProvider="background"
        app:layout_constraintStart_toStartOf="@id/input_layout_search"
        app:layout_constraintEnd_toEndOf="@id/input_layout_search"
        app:layout_constraintTop_toBottomOf="@id/random_sub_container"
        android:layout_marginTop="@dimen/spacing_m"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/random_nsfw_label_icon"
        android:layout_width="@dimen/spacing_xl"
        android:layout_height="@dimen/spacing_xl"
        app:layout_constraintTop_toTopOf="@id/random_nsfw_container"
        app:layout_constraintBottom_toBottomOf="@id/random_nsfw_container"
        app:layout_constraintStart_toStartOf="@id/random_nsfw_container"
        android:layout_marginStart="@dimen/spacing_l"
        android:src="@drawable/ic_warning"
        android:backgroundTint="@color/accent" />

    <TextView
        android:id="@+id/random_nsfw_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/random_nsfw_container"
        app:layout_constraintBottom_toBottomOf="@id/random_nsfw_container"
        app:layout_constraintStart_toEndOf="@id/random_nsfw_label_icon"
        app:layout_constraintEnd_toEndOf="@id/random_nsfw_container"
        android:layout_marginStart="@dimen/spacing_l"
        android:layout_marginEnd="@dimen/spacing_l"
        android:text="@string/random_nsfw_text" />

    <ImageView
        android:id="@+id/random_nsfw_action_icon"
        android:layout_width="@dimen/spacing_l"
        android:layout_height="@dimen/spacing_l"
        app:layout_constraintTop_toTopOf="@id/random_nsfw_container"
        app:layout_constraintBottom_toBottomOf="@id/random_nsfw_container"
        app:layout_constraintEnd_toEndOf="@id/random_nsfw_container"
        android:layout_marginEnd="@dimen/spacing_l"
        android:src="@drawable/ic_arrow_forward"
        android:backgroundTint="@color/accent" />

    <TextView
        android:id="@+id/subreddit_results_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/random_nsfw_container"
        app:layout_constraintStart_toStartOf="@id/input_layout_search"
        android:layout_marginTop="@dimen/spacing_l"
        android:textSize="12sp"
        android:text="Search results"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subreddit_result_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/subreddit_results_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/spacing_m"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/subreddit_result_list_item"
        tools:itemCount="20" />

</androidx.constraintlayout.widget.ConstraintLayout>
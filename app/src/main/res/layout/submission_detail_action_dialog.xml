<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_fragment_bg">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_title"
        style="@style/Text.Bold.H2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_l"
        android:layout_marginStart="@dimen/spacing_l.5"
        android:text="@string/share_dialog_title" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/action_share_image"
        style="@style/SelectableTextViewItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/share_as_image"
        app:drawableStartCompat="@drawable/ic_baseline_image_24"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/action_copy_text"
        style="@style/SelectableTextViewItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_share_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/copy"
        app:drawableStartCompat="@drawable/ic_copy"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/sort_hot"
        style="@style/SelectableTextViewItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_copy_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/action_share"
        app:drawableStartCompat="@drawable/ic_share"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/sort_new"
        style="@style/SelectableTextViewItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sort_hot"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/action_author_profile"
        app:drawableStartCompat="@drawable/ic_account"
        tools:text="View u/chertycherty"/>

</androidx.constraintlayout.widget.ConstraintLayout>
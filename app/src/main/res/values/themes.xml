    <style name="SelectableTextViewItem">
        <item name="android:padding">@dimen/spacing_l</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:drawablePadding">@dimen/spacing_l</item>
        <item name="drawableTint">@color/accent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Bold.H2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Bold.Label">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.125</item>
    </style>

    <style name="Icon">
        <item name="tint">#000000</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/ButtonText</item>
        <item name="cornerRadius">@dimen/spacing_m.5</item>
    </style>

    <style name="Widget.App.Button.Icon" parent="Widget.Material3.Button.Icon">
        <item name="android:textAppearance">@style/ButtonText</item>
        <item name="cornerRadius">@dimen/spacing_m.5</item>
    </style>

    <style name="Widget.App.Button.Elevated.Icon" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="android:textAppearance">@style/ButtonText</item>
        <item name="cornerRadius">@dimen/spacing_m.5</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/ButtonText</item>
        <item name="cornerRadius">@dimen/spacing_m.5</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="TextInputStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
    </style>

    <style name="CommentTextInputStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopLeft">@dimen/spacing_m</item>
        <item name="cornerSizeBottomLeft">@dimen/spacing_m</item>
    </style>

    <style name="TwitterRoundedImage" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/spacing_m</item>
        <item name="cornerSizeTopRight">@dimen/spacing_m</item>
    </style>

</resources>